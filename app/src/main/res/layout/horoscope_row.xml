<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraintLayoutHoroscopeRow"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#989494">

    <ImageView
        android:id="@+id/imvHoroscopeSymbol"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtHoroscopeName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/imvHoroscopeElementLogo"
        app:layout_constraintStart_toEndOf="@+id/imvHoroscopeSymbol"
        app:layout_constraintTop_toTopOf="@+id/imvHoroscopeSymbol" />

    <TextView
        android:id="@+id/txtHoroscopeDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="@+id/imvHoroscopeSymbol"
        app:layout_constraintEnd_toStartOf="@+id/imvHoroscopeElementLogo"
        app:layout_constraintStart_toEndOf="@+id/imvHoroscopeSymbol"
        app:layout_constraintTop_toBottomOf="@+id/txtHoroscopeName" />

    <ImageView
        android:id="@+id/imvHoroscopeElementLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imvHoroscopeSymbol" />
</androidx.constraintlayout.widget.ConstraintLayout>